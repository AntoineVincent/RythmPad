{% extends 'base.html.twig' %}

{% block body %}

<h1 class="crt-alb-title">Ajoutez un nouvel album</h1>
<div class="col-md-3"></div>
<div class="col-md-6 new-div">
	{{ form_start(form) }}
		<div class="col-md-12 alb-form">
            <div class="col-md-1"></div>
            <div class="col-md-4">
    		  <p>Titre</p> 
            </div>
            <div class="col-md-6">
              {{ form_widget(form.titre) }}
            </div>
		</div>
    	<div class="col-md-12 alb-form">
            <div class="col-md-1"></div>
            <div class="col-md-4">
    		  <p>Artiste</p> 
            </div>
            <div class="col-md-6">
              {{ form_widget(form.artiste) }}
            </div>
    	</div>
    	<div class="col-md-12 alb-form">
            <div class="col-md-1"></div>
            <div class="col-md-4">
    		  <p>Date</p> 
            </div>
            <div class="col-md-6">
              {{ form_widget(form.date) }}
            </div>
    	</div>
    	<div class="col-md-12 alb-form">
            <div class="col-md-1"></div>
            <div class="col-md-4">
    		  <p>Genre</p> 
            </div>
            <div class="col-md-6">
              {{ form_widget(form.genre) }}
            </div>
    	</div>
    	<div class="col-md-12 alb-form">
            <div class="col-md-1"></div>
            <div class="col-md-4">
    		  <p>Musique</p> 
            </div>
            <div class="col-md-6">
              {{ form_widget(form.musique) }}
            </div>
    	</div>
    	<div class="col-md-12 alb-form">
            <div class="col-md-4"></div>
            <div class="col-md-4">
    		  <input type="submit" class="btn btn-primary" id="_submit" name="submit" value="Envoyer" />
            </div>
            <div class="col-md-4"></div>
    	</div>
	{{ form_end(form) }}
</div>

{% endblock %} 