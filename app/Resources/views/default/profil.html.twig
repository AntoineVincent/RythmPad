{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3 prl-div">
        	<div class="col-md-12">
        		<h2 class="prl-title">Profil de {{ requete.username }}<h2>
        		<hr style="border-color:#F7CA18;">
        	</div>
        	<div class="col-md-12">
                <img class="img-responsive profil-pic" src="{{ asset('img/pla.png') }}"/>
                <hr style="border-color:#F7CA18;">
            </div>
            <div class="col-md-12">
                <p class="user-inf">Nom : {{ requete.nom }}</p>
            </div>
            <div class="col-md-12">
                <p class="user-inf">Prenom : {{ requete.prenom }}</p>
            </div>
            <div class="col-md-12">
                <p class="user-inf">Genre : {{ requete.genre }}</p>
            </div>
            <div class="col-md-12">
                <p class="user-inf">Promo : {{ requete.promo }}</p>
            </div>
            <div class="col-md-12">
                <hr style="border-color:#F7CA18;">
            </div>
        	<div class="col-md-12">
        		<div class="col-md-9">
        			<a class="btn btn-prl" href="{{ path('profil_modif') }}" role="button">Modifier votre profil</a>
        		</div>
        		<div class="col-md-1"></div>
	        </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-8">
                <div class="col-md-12">
                    <h2 class="prl-title"> Vos Albums </h2>
            {% for album in albums %}
                <div class="col-md-4 ">
                    <div class="col-xs-12 col-md-12 prl-list-alb">
                        <img class="folder" src="{{ asset('uploads/folders/' ~ album.folder) }}" />
                    </div>
                    <div class="col-xs-12 col-md-12 prl-list-alb">
                        <p>Artiste : {{ album.artiste }}</p>
                    </div>
                    <div class="col-xs-12 col-md-12 prl-list-alb">
                        <p>Album : {{ album.titre }}</p>
                    </div>
                    <div class="col-xs-12 col-md-12 mus-empt link-alb prl-list-alb">
                        <a class="btn" href="{{ path('page_album', { 'idalbum': album.id }) }}">VOIR</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %} 